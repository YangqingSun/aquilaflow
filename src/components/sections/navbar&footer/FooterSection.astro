---
// Import the necessary dependencies
import FooterSocialLink from "@components/ui/links/FooterSocialLink.astro";
import EmailFooterInput from "@components/ui/forms/input/EmailFooterInput.astro";
import enStrings from "@utils/navigation.ts";
import zhStrings from "@utils/zh/navigation.ts";
import esStrings from "@utils/es/navigation.ts";
import jaStrings from "@utils/ja/navigation.ts";
import koStrings from "@utils/ko/navigation.ts";
import frStrings from "@utils/fr/navigation.ts";
import deStrings from "@utils/de/navigation.ts";
import Icon from "@components/ui/icons/Icon.astro";
import BrandLogo from "@components/BrandLogo.astro";
import { SITE } from "@data/constants";

// Get locale from props or detect from URL
const { locale: propLocale } = Astro.props;

// Helper function to extract locale from URL path
function getLocaleFromPath(pathname: string): string {
  const supportedLocales = ["zh", "es", "ja", "ko", "fr", "de"];
  // Normalize pathname: remove leading/trailing slashes and split
  const normalizedPath = pathname.replace(/^\/+|\/+$/g, "");
  const pathParts = normalizedPath.split("/").filter(Boolean);
  
  if (pathParts.length > 0 && supportedLocales.includes(pathParts[0])) {
    return pathParts[0];
  }
  
  return "en";
}

// Select the correct translation based on the page's lang prop:
// Try multiple methods to detect locale
let locale = "en";
if (propLocale) {
  // Use locale from props (passed from MainLayout)
  locale = propLocale;
} else if (Astro.currentLocale) {
  locale = Astro.currentLocale;
} else {
  // Try to get pathname from different sources
  let pathname = "";
  if (Astro.url && Astro.url.pathname) {
    pathname = Astro.url.pathname;
  } else if (Astro.request && Astro.request.url) {
    try {
      const url = new URL(Astro.request.url);
      pathname = url.pathname;
    } catch (e) {
      // Fallback
    }
  }
  if (pathname) {
    locale = getLocaleFromPath(pathname);
  }
}

interface Props {
  locale?: string;
}
const stringsMap: Record<string, any> = {
  en: enStrings,
  zh: zhStrings,
  es: esStrings,
  ja: jaStrings,
  ko: koStrings,
  fr: frStrings,
  de: deStrings,
};
const strings = stringsMap[locale] || enStrings;

// Define the variables that will be used in this component
const translations: Record<string, { title: string; content: string }> = {
  en: { title: "Stay up to date", content: "Stay updated with our latest innovations and services." },
  zh: { title: "保持更新", content: "及时了解我们的最新创新和服务。" },
  es: { title: "Mantente al día", content: "Mantente actualizado con nuestras últimas innovaciones y servicios." },
  ja: { title: "最新情報を受け取る", content: "最新のイノベーションとサービスについて最新情報を入手してください。" },
  ko: { title: "최신 정보 받기", content: "최신 혁신과 서비스에 대한 최신 정보를 받아보세요." },
  fr: { title: "Rester à jour", content: "Restez informé de nos dernières innovations et services." },
  de: { title: "Auf dem Laufenden bleiben", content: "Bleiben Sie über unsere neuesten Innovationen und Dienstleistungen informiert." },
};

const sectionThreeTitle: string = translations[locale]?.title || translations.en.title;
const sectionThreeContent: string = translations[locale]?.content || translations.en.content;

// Define translations for "All rights reserved"
const rightsReservedTranslations: Record<string, string> = {
  en: "All rights reserved.",
  zh: "保留所有权利。",
  es: "Todos los derechos reservados.",
  ja: "全著作権所有。",
  ko: "모든 권리 보유.",
  fr: "Tous droits réservés.",
  de: "Alle Rechte vorbehalten.",
};

const rightsReserved = rightsReservedTranslations[locale] || rightsReservedTranslations.en;
---

<footer class="w-full bg-neutral-300 dark:bg-neutral-900">
  <div
    class="mx-auto w-full max-w-[85rem] px-4 py-10 sm:px-6 lg:px-16 lg:pt-20 2xl:max-w-(--breakpoint-2xl)"
  >
    <div class="grid grid-cols-2 gap-6 md:grid-cols-4 lg:grid-cols-5">
      <div class="col-span-full lg:col-span-1">
        <!-- Brand Logo -->
        <BrandLogo class="h-auto w-32" />
      </div>
      <!-- An array of links for Product and Company sections -->
      {
        strings.footerLinks.map((section) => (
          <div class="col-span-1">
            <h3 class="font-bold text-neutral-800 dark:text-neutral-200">
              {section.section}
            </h3>
            <ul class="mt-3 grid space-y-3">
              {section.links.map((link, index) => (
                <li>
                  <a
                    href={link.url}
                    class="inline-flex gap-x-2 rounded-lg text-neutral-600 outline-hidden ring-zinc-500 transition duration-300 hover:text-neutral-500 focus-visible:ring-3 dark:text-neutral-400 dark:ring-zinc-200 dark:hover:text-neutral-300 dark:focus:outline-hidden"
                  >
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }

      <div class="col-span-2">
        <h3 class="font-bold text-neutral-800 dark:text-neutral-200">
          {sectionThreeTitle}
        </h3>

        <form>
          <EmailFooterInput locale={locale} />
          <p class="mt-3 text-sm text-neutral-600 dark:text-neutral-400">
            {sectionThreeContent}
          </p>
        </form>
      </div>
    </div>

    <div
      class="mt-9 grid gap-y-2 sm:mt-12 sm:flex sm:items-center sm:justify-between sm:gap-y-0"
    >
      <div class="flex items-center justify-between">
        <p class="text-sm text-neutral-600 dark:text-neutral-400">
          © <span id="current-year"></span> {SITE.title}. {rightsReserved}
        </p>
      </div>

      <!-- Social Brands -->
      <div>
        <FooterSocialLink url={strings.socialLinks.facebook}
          ><Icon name="facebookFooter" />
        </FooterSocialLink>

        <FooterSocialLink url={strings.socialLinks.x}
          ><Icon name="xFooter" /></FooterSocialLink
        >

        <FooterSocialLink url={strings.socialLinks.github}
          ><Icon name="githubFooter" />
        </FooterSocialLink>

        <FooterSocialLink url={strings.socialLinks.google}
          ><Icon name="googleFooter" />
        </FooterSocialLink>

        <FooterSocialLink url={strings.socialLinks.slack}
          ><Icon name="slackFooter" />
        </FooterSocialLink>
      </div>
    </div>

    <script>
      const year = new Date().getFullYear();
      const element = document.getElementById("current-year");
      element!.innerText = year.toString();
    </script>
  </div>
</footer>
