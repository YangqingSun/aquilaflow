---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/service-schematic.jpg";
import personWorking from "@images/service-meeting.jpg";
import beforeAfter from "@images/service-testing.jpg";
import constructionWorkers from "@images/service-engineer.jpg";
import aerialView from "@images/service-soldering.jpg";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Conception PCB et DFM",
    subTitle:
      "Nos services de conception PCB couvrent le cycle de conception complet de la capture de schémas à l'optimisation de la mise en page. Nous sommes spécialisés dans le Design for Manufacturability (DFM) pour garantir que vos cartes sont prêtes pour la production. Notre équipe travaille avec vous pour optimiser le placement des composants, le routage et l'empilement des couches à la fois pour les performances et la rentabilité. Nous fournissons des revues de conception détaillées et des analyses de fabricabilité pour détecter les problèmes potentiels avant qu'ils n'atteignent la ligne de production.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Plans et schémas de conception PCB",
    imgTwo: personWorking,
    imgTwoAlt: "Ingénieur travaillant sur la conception PCB",
  },
  {
    isRightSection: false,
    title: "Systèmes de Test Automatisés",
    subTitle:
      "Nous développons des équipements de test automatisés basés sur Python qui s'intègrent parfaitement dans votre ligne de production. Nos systèmes de test sont conçus pour la fiabilité, la répétabilité et l'évolutivité. Des tests fonctionnels à la validation des conditions limites, nous créons des suites de test complètes qui garantissent la qualité du produit à chaque étape de la fabrication. Nos solutions prennent en charge les environnements de production à haut volume et peuvent être facilement adaptées à mesure que votre produit évolue.",
    img: beforeAfter,
    imgAlt: "Système de test automatisé en environnement de production",
    btnExists: true,
    btnTitle: "Obtenir un Devis",
    btnURL: "/fr/contact",
  },
  {
    isRightSection: true,
    title: "Débogage Matériel",
    subTitle:
      "Lorsque des problèmes matériels surviennent, nos services de débogage fournissent une analyse rapide de la cause racine. Nous sommes spécialisés dans l'intégrité de l'alimentation, l'intégrité du signal et le dépannage EMI/EMC. En utilisant des équipements de mesure avancés et des techniques d'analyse, nous identifions et résolvons les problèmes qui peuvent affecter les performances, la fiabilité et la conformité réglementaire. Notre processus de débogage comprend une documentation détaillée et des recommandations pour prévenir des problèmes similaires dans les conceptions futures.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Débogage et analyse matérielle",
    imgTwo: aerialView,
    imgTwoAlt: "Analyse et tests de circuits",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
const metaDescription =
  "AquilaFlow Systems fournit des services complets d'ingénierie matérielle, notamment la conception de PCB, les systèmes de test automatisés et le débogage matériel pour accélérer votre produit du prototype à la production.";
const ogTitle = "Services d'Ingénierie Matérielle | AquilaFlow Systems";
---

<MainLayout
  lang="fr"
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://aquilaflow.com/fr/services",
    url: "https://aquilaflow.com/fr/services",
    name: "Services d'Ingénierie Matérielle | AquilaFlow Systems",
    description:
      "AquilaFlow Systems fournit des services complets d'ingénierie matérielle, notamment la conception de PCB, les systèmes de test automatisés et le débogage matériel pour accélérer votre produit du prototype à la production.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://aquilaflow.com",
      name: "AquilaFlow Systems",
      description:
        "Entreprise d'ingénierie matérielle basée aux États-Unis, spécialisée dans la conception de PCB et les systèmes de test automatisés Python.",
    },
    inLanguage: "fr",
  }}
>
  <MainSection
    title="Services d'Ingénierie Matérielle"
    subTitle="De la conception initiale de PCB aux tests automatisés et au débogage, AquilaFlow Systems fournit des services d'ingénierie matérielle de bout en bout. Nous aidons les entreprises de matériel à combler l'écart entre le prototype et la production de masse avec des services de conception professionnels, l'automatisation des tests basée sur Python et des capacités de débogage expertes."
    btnExists={true}
    btnTitle="Obtenir une Évaluation de Projet"
    btnURL="/fr/contact"
  />
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="Par les Chiffres"
    subTitle="Notre engagement envers la qualité et la fiabilité est évident dans chaque projet que nous entreprenons. Chez AquilaFlow Systems, nous nous engageons à fournir des services d'ingénierie matérielle de premier plan dans l'industrie qui garantissent que vos produits sont prêts pour la production."
    mainStatTitle="98%"
    mainStatSubTitle="de nos conceptions PCB passent la validation de fabrication du premier coup"
    stats={[
      {
        stat: "500+",
        description: "conceptions PCB livrées",
      },
      {
        stat: "50+",
        description: "systèmes de test automatisés déployés",
      },
      {
        stat: "95%",
        description: "problèmes de débogage résolus en 48 heures",
      },
    ]}
  />
</MainLayout>
