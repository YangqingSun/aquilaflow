---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
const metaDescription =
  "Avez-vous des questions sur la conception de PCB, les tests automatisés ou le débogage matériel ? Contactez AquilaFlow Systems pour une évaluation gratuite de projet et une consultation.";
const ogTitle = "Contactez-nous | AquilaFlow Systems";
---

<MainLayout
  lang="fr"
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://aquilaflow.com/fr/contact",
    url: "https://aquilaflow.com/fr/contact",
    name: "Contactez-nous | AquilaFlow Systems",
    description:
      "Avez-vous des questions sur la conception de PCB, les tests automatisés ou le débogage matériel ? Contactez AquilaFlow Systems pour une évaluation gratuite de projet et une consultation.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://aquilaflow.com",
      name: "AquilaFlow Systems",
      description:
        "Entreprise d'ingénierie matérielle basée aux États-Unis, spécialisée dans la conception de PCB et les systèmes de test automatisés Python.",
    },
    inLanguage: "fr",
  }}
>
  <ContactSection />
</MainLayout>
