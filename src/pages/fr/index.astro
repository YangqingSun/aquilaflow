---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import heroImage from "@images/hero-image.jpg";
import faqs from "@data/fr/faqs.json";
import features from "@data/fr/features.json";
import featureImage from "@images/product-pcb.jpg";
---

<MainLayout lang="fr">
  <HeroSection
    title={`Accélérer le Matériel du <span class="text-cyan-500 dark:text-cyan-400">Prototype à la Production de Masse</span>`}
    subTitle="Nous comblons l'écart entre la conception initiale et la fabrication prête pour l'usine avec des solutions PCB personnalisées et des tests automatisés basés sur Python."
    primaryBtn="Obtenir une Évaluation de Projet"
    primaryBtnURL="/fr/contact"
    secondaryBtn="Voir les Services"
    secondaryBtnURL="/fr/services"
    withReview={false}
    src={heroImage}
    alt="Ingénierie matérielle et conception PCB d'AquilaFlow Systems"
  />

  <FeaturesGeneral
    title="Nos Services Principaux"
    subTitle="Nous sommes spécialisés dans trois domaines clés qui aident les entreprises de matériel à passer efficacement du prototype à la production."
    src={featureImage}
    alt="Services d'AquilaFlow Systems"
    features={features}
  />

  <FAQ title="Questions<br />fréquemment posées" faqs={faqs} />

  <HeroSectionAlt
    title="Construisons Ensemble"
    subTitle="Prêt à accélérer votre projet matériel ? Contactez-nous pour une évaluation gratuite."
    url="/fr/contact"
    locale="fr"
  />
</MainLayout>
