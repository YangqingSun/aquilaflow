---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
const metaDescription =
  "Have questions about PCB design, automated testing, or hardware debugging? Contact AquilaFlow Systems for a free project assessment and consultation.";
const ogTitle = "Contact Us | AquilaFlow Systems";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://aquilaflow.com/contact",
    url: "https://aquilaflow.com/contact",
    name: "Contact Us | AquilaFlow Systems",
    description:
      "Have questions about PCB design, automated testing, or hardware debugging? Contact AquilaFlow Systems for a free project assessment and consultation.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://aquilaflow.com",
      name: "AquilaFlow Systems",
      description:
        "US-based hardware engineering firm specializing in PCB design and Python automated test systems.",
    },
    inLanguage: "en-US",
  }}
>
  <ContactSection />
</MainLayout>
