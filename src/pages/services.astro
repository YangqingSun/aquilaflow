---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/service-schematic.jpg";
import personWorking from "@images/service-meeting.jpg";
import beforeAfter from "@images/service-testing.jpg";
import constructionWorkers from "@images/service-engineer.jpg";
import aerialView from "@images/service-soldering.jpg";
import usingTools from "@images/using-tools.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "PCB Design & DFM",
    subTitle:
      "Our PCB design services cover the complete design cycle from schematic capture to layout optimization. We specialize in Design for Manufacturability (DFM) to ensure your boards are production-ready. Our team works with you to optimize component placement, routing, and layer stackup for both performance and cost-effectiveness. We provide detailed design reviews and manufacturability analysis to catch potential issues before they reach the production line.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "PCB design blueprints and schematics",
    imgTwo: personWorking,
    imgTwoAlt: "Engineer working on PCB design",
  },
  {
    isRightSection: false,
    title: "Automated Test Systems",
    subTitle:
      "We develop Python-powered automated test fixtures that integrate seamlessly into your production line. Our test systems are designed for reliability, repeatability, and scalability. From functional testing to boundary condition validation, we create comprehensive test suites that ensure product quality at every stage of manufacturing. Our solutions support high-volume production environments and can be easily adapted as your product evolves.",
    img: beforeAfter,
    imgAlt: "Automated test system in production environment",
    btnExists: true,
    btnTitle: "Get a Quote",
    btnURL: "/contact",
  },
  {
    isRightSection: true,
    title: "Hardware Debugging",
    subTitle:
      "When hardware issues arise, our debugging services provide rapid root cause analysis. We specialize in power integrity, signal integrity, and EMI/EMC troubleshooting. Using advanced measurement equipment and analysis techniques, we identify and resolve issues that can impact performance, reliability, and regulatory compliance. Our debugging process includes detailed documentation and recommendations to prevent similar issues in future designs.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Hardware debugging and analysis",
    imgTwo: aerialView,
    imgTwoAlt: "Circuit analysis and testing",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
const metaDescription =
  "AquilaFlow Systems provides comprehensive hardware engineering services including PCB design, automated test systems, and hardware debugging to accelerate your product from prototype to production.";
const ogTitle = "Hardware Engineering Services | AquilaFlow Systems";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://aquilaflow.com/services",
    url: "https://aquilaflow.com/services",
    name: "Hardware Engineering Services | AquilaFlow Systems",
    description:
      "AquilaFlow Systems provides comprehensive hardware engineering services including PCB design, automated test systems, and hardware debugging to accelerate your product from prototype to production.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://aquilaflow.com",
      name: "AquilaFlow Systems",
      description:
        "US-based hardware engineering firm specializing in PCB design and Python automated test systems.",
    },
    inLanguage: "en-US",
  }}
>
  {/* MainSection is the introductory section of the page, it also contains a CTA button */}
  <MainSection
    title="Hardware Engineering Services"
    subTitle="From initial PCB design through automated testing and debugging, AquilaFlow Systems provides end-to-end hardware engineering services. We help hardware companies bridge the gap between prototype and mass production with professional design services, Python-powered test automation, and expert debugging capabilities."
    btnExists={true}
    btnTitle="Get a Project Assessment"
    btnURL="/contact"
  />
  {/* RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  {/* FeaturesStats section showcases essential stats valuable to users */}
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At AquilaFlow Systems, we are dedicated to delivering industry-leading hardware engineering services that ensure your products are production-ready."
    mainStatTitle="98%"
    mainStatSubTitle="of our PCB designs pass first-time manufacturing validation"
    stats={[
      {
        stat: "500+",
        description: "PCB designs delivered",
      },
      {
        stat: "50+",
        description: "automated test systems deployed",
      },
      {
        stat: "95%",
        description: "debugging issues resolved within 48 hours",
      },
    ]}
  />
</MainLayout>
