---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import heroImage from "@images/hero-image.jpg";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import featureImage from "@images/product-pcb.jpg";
---

<MainLayout>
  <HeroSection
    title={`Accelerating Hardware from <span class="text-cyan-500 dark:text-cyan-400">Prototype to Mass Production</span>`}
    subTitle="We bridge the gap between initial design and factory-ready manufacturing with custom PCB solutions and Python-powered automated testing."
    primaryBtn="Get a Project Assessment"
    primaryBtnURL="/contact"
    secondaryBtn="View Services"
    secondaryBtnURL="/services"
    withReview={false}
    src={heroImage}
    alt="AquilaFlow Systems hardware engineering and PCB design"
  />

  <FeaturesGeneral
    title="Our Core Services"
    subTitle="We specialize in three key areas that help hardware companies move from prototype to production efficiently."
    src={featureImage}
    alt="AquilaFlow Systems services"
    features={features}
  />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Let's Build Together"
    subTitle="Ready to accelerate your hardware project? Contact us for a free assessment."
    url="/contact"
  />
</MainLayout>
