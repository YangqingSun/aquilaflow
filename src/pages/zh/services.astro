---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/service-schematic.jpg";
import personWorking from "@images/service-meeting.jpg";
import beforeAfter from "@images/service-testing.jpg";
import constructionWorkers from "@images/service-engineer.jpg";
import aerialView from "@images/service-soldering.jpg";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "PCB 设计与可制造性",
    subTitle:
      "我们的 PCB 设计服务涵盖从原理图捕获到布局优化的完整设计周期。我们专注于可制造性设计（DFM），确保您的电路板能够投入生产。我们的团队与您合作，优化元件布局、布线和层叠，以实现性能和成本效益的平衡。我们提供详细的设计审查和可制造性分析，在生产线上线前发现潜在问题。",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "PCB 设计蓝图和原理图",
    imgTwo: personWorking,
    imgTwoAlt: "工程师进行 PCB 设计",
  },
  {
    isRightSection: false,
    title: "自动化测试系统",
    subTitle:
      "我们开发基于 Python 的自动化测试设备，可无缝集成到您的生产线中。我们的测试系统专为可靠性、可重复性和可扩展性而设计。从功能测试到边界条件验证，我们创建全面的测试套件，确保制造每个阶段的产品质量。我们的解决方案支持大批量生产环境，并可以随着产品的发展轻松调整。",
    img: beforeAfter,
    imgAlt: "生产环境中的自动化测试系统",
    btnExists: true,
    btnTitle: "获取报价",
    btnURL: "/zh/contact",
  },
  {
    isRightSection: true,
    title: "硬件调试",
    subTitle:
      "当硬件问题出现时，我们的调试服务提供快速的根本原因分析。我们专注于电源完整性、信号完整性和 EMI/EMC 故障排除。使用先进的测量设备和分析技术，我们识别并解决可能影响性能、可靠性和法规合规性的问题。我们的调试过程包括详细的文档记录和建议，以防止未来设计中出现类似问题。",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "硬件调试和分析",
    imgTwo: aerialView,
    imgTwoAlt: "电路分析和测试",
  },
];

const pageTitle: string = `服务 | ${SITE.title}`;
const metaDescription =
  "AquilaFlow Systems 提供全面的硬件工程服务，包括 PCB 设计、自动化测试系统和硬件调试，帮助您的产品从原型加速到生产。";
const ogTitle = "硬件工程服务 | AquilaFlow Systems";
---

<MainLayout
  lang="zh"
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://aquilaflow.com/zh/services",
    url: "https://aquilaflow.com/zh/services",
    name: "硬件工程服务 | AquilaFlow Systems",
    description:
      "AquilaFlow Systems 提供全面的硬件工程服务，包括 PCB 设计、自动化测试系统和硬件调试，帮助您的产品从原型加速到生产。",
    isPartOf: {
      "@type": "WebSite",
      url: "https://aquilaflow.com",
      name: "AquilaFlow Systems",
      description:
        "专注于 PCB 设计和 Python 自动化测试系统的美国硬件工程公司。",
    },
    inLanguage: "zh-CN",
  }}
>
  <MainSection
    title="硬件工程服务"
    subTitle="从初始 PCB 设计到自动化测试和调试，AquilaFlow Systems 提供端到端的硬件工程服务。我们通过专业的设计服务、基于 Python 的测试自动化和专业的调试能力，帮助硬件公司连接原型和量产之间的桥梁。"
    btnExists={true}
    btnTitle="获取项目评估"
    btnURL="/zh/contact"
  />
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="数据统计"
    subTitle="我们对质量和可靠性的承诺体现在我们承担的每个项目中。在 AquilaFlow Systems，我们致力于提供行业领先的硬件工程服务，确保您的产品能够投入生产。"
    mainStatTitle="98%"
    mainStatSubTitle="的 PCB 设计首次通过制造验证"
    stats={[
      {
        stat: "500+",
        description: "已交付的 PCB 设计",
      },
      {
        stat: "50+",
        description: "已部署的自动化测试系统",
      },
      {
        stat: "95%",
        description: "调试问题在 48 小时内解决",
      },
    ]}
  />
</MainLayout>

