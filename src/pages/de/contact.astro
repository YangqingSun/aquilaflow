---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Kontakt | ${SITE.title}`;
const metaDescription =
  "Haben Sie Fragen zu PCB-Design, automatisierten Tests oder Hardware-Debugging? Kontaktieren Sie AquilaFlow Systems für eine kostenlose Projektbewertung und Beratung.";
const ogTitle = "Kontaktieren Sie uns | AquilaFlow Systems";
---

<MainLayout
  lang="de"
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://aquilaflow.com/de/contact",
    url: "https://aquilaflow.com/de/contact",
    name: "Kontaktieren Sie uns | AquilaFlow Systems",
    description:
      "Haben Sie Fragen zu PCB-Design, automatisierten Tests oder Hardware-Debugging? Kontaktieren Sie AquilaFlow Systems für eine kostenlose Projektbewertung und Beratung.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://aquilaflow.com",
      name: "AquilaFlow Systems",
      description:
        "US-basiertes Hardware-Engineering-Unternehmen, spezialisiert auf PCB-Design und Python-automatisierte Testsysteme.",
    },
    inLanguage: "de",
  }}
>
  <ContactSection />
</MainLayout>

