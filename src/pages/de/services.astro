---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/service-schematic.jpg";
import personWorking from "@images/service-meeting.jpg";
import beforeAfter from "@images/service-testing.jpg";
import constructionWorkers from "@images/service-engineer.jpg";
import aerialView from "@images/service-soldering.jpg";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "PCB-Design & DFM",
    subTitle:
      "Unsere PCB-Design-Dienstleistungen decken den vollständigen Designzyklus von der Schaltplanerfassung bis zur Layout-Optimierung ab. Wir sind spezialisiert auf Design for Manufacturability (DFM), um sicherzustellen, dass Ihre Platinen produktionsbereit sind. Unser Team arbeitet mit Ihnen zusammen, um Komponentenplatzierung, Routing und Layer-Stapelung sowohl für Leistung als auch für Kosteneffizienz zu optimieren. Wir bieten detaillierte Design-Reviews und Fertigbarkeitsanalysen, um potenzielle Probleme zu erkennen, bevor sie die Produktionslinie erreichen.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "PCB-Design-Pläne und Schaltpläne",
    imgTwo: personWorking,
    imgTwoAlt: "Ingenieur arbeitet am PCB-Design",
  },
  {
    isRightSection: false,
    title: "Automatisierte Testsysteme",
    subTitle:
      "Wir entwickeln Python-gesteuerte automatisierte Testgeräte, die nahtlos in Ihre Produktionslinie integriert werden. Unsere Testsysteme sind für Zuverlässigkeit, Wiederholbarkeit und Skalierbarkeit konzipiert. Von Funktionstests bis zur Validierung von Grenzbedingungen erstellen wir umfassende Testsuites, die die Produktqualität in jeder Phase der Fertigung sicherstellen. Unsere Lösungen unterstützen Hochvolumen-Produktionsumgebungen und können sich leicht anpassen, wenn sich Ihr Produkt weiterentwickelt.",
    img: beforeAfter,
    imgAlt: "Automatisiertes Testsystem in Produktionsumgebung",
    btnExists: true,
    btnTitle: "Angebot erhalten",
    btnURL: "/de/contact",
  },
  {
    isRightSection: true,
    title: "Hardware-Debugging",
    subTitle:
      "Wenn Hardware-Probleme auftreten, bieten unsere Debugging-Dienstleistungen eine schnelle Ursachenanalyse. Wir sind spezialisiert auf Stromversorgungsintegrität, Signalintegrität und EMI/EMC-Fehlerbehebung. Mit fortschrittlichen Messgeräten und Analysetechniken identifizieren und lösen wir Probleme, die Leistung, Zuverlässigkeit und regulatorische Compliance beeinträchtigen können. Unser Debugging-Prozess umfasst detaillierte Dokumentation und Empfehlungen, um ähnliche Probleme in zukünftigen Designs zu vermeiden.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Hardware-Debugging und -Analyse",
    imgTwo: aerialView,
    imgTwoAlt: "Schaltungsanalyse und -tests",
  },
];

const pageTitle: string = `Dienstleistungen | ${SITE.title}`;
const metaDescription =
  "AquilaFlow Systems bietet umfassende Hardware-Engineering-Dienstleistungen, einschließlich PCB-Design, automatisierte Testsysteme und Hardware-Debugging, um Ihr Produkt vom Prototyp zur Produktion zu beschleunigen.";
const ogTitle = "Hardware-Engineering-Dienstleistungen | AquilaFlow Systems";
---

<MainLayout
  lang="de"
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://aquilaflow.com/de/services",
    url: "https://aquilaflow.com/de/services",
    name: "Hardware-Engineering-Dienstleistungen | AquilaFlow Systems",
    description:
      "AquilaFlow Systems bietet umfassende Hardware-Engineering-Dienstleistungen, einschließlich PCB-Design, automatisierte Testsysteme und Hardware-Debugging, um Ihr Produkt vom Prototyp zur Produktion zu beschleunigen.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://aquilaflow.com",
      name: "AquilaFlow Systems",
      description:
        "US-basiertes Hardware-Engineering-Unternehmen, spezialisiert auf PCB-Design und Python-automatisierte Testsysteme.",
    },
    inLanguage: "de",
  }}
>
  <MainSection
    title="Hardware-Engineering-Dienstleistungen"
    subTitle="Vom anfänglichen PCB-Design über automatisierte Tests bis hin zum Debugging bietet AquilaFlow Systems End-to-End-Hardware-Engineering-Dienstleistungen. Wir helfen Hardware-Unternehmen dabei, die Lücke zwischen Prototyp und Serienproduktion mit professionellen Design-Dienstleistungen, Python-basierter Testautomatisierung und fachkundigen Debugging-Fähigkeiten zu überbrücken."
    btnExists={true}
    btnTitle="Projektbewertung erhalten"
    btnURL="/de/contact"
  />
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="In Zahlen"
    subTitle="Unser Engagement für Qualität und Zuverlässigkeit zeigt sich in jedem Projekt, das wir durchführen. Bei AquilaFlow Systems sind wir bestrebt, branchenführende Hardware-Engineering-Dienstleistungen anzubieten, die sicherstellen, dass Ihre Produkte produktionsbereit sind."
    mainStatTitle="98%"
    mainStatSubTitle="unserer PCB-Designs bestehen die Fertigungsvalidierung beim ersten Versuch"
    stats={[
      {
        stat: "500+",
        description: "ausgelieferte PCB-Designs",
      },
      {
        stat: "50+",
        description: "bereitgestellte automatisierte Testsysteme",
      },
      {
        stat: "95%",
        description: "Debugging-Probleme innerhalb von 48 Stunden gelöst",
      },
    ]}
  />
</MainLayout>

