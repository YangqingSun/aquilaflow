---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import heroImage from "@images/hero-image.jpg";
import faqs from "@data/de/faqs.json";
import features from "@data/de/features.json";
import featureImage from "@images/product-pcb.jpg";
---

<MainLayout lang="de">
  <HeroSection
    title={`Hardware beschleunigen von <span class="text-cyan-500 dark:text-cyan-400">Prototyp bis Serienproduktion</span>`}
    subTitle="Wir überbrücken die Lücke zwischen initialem Design und fertigungsbereiter Produktion mit maßgeschneiderten PCB-Lösungen und Python-basierten automatisierten Tests."
    primaryBtn="Projektbewertung erhalten"
    primaryBtnURL="/de/contact"
    secondaryBtn="Dienstleistungen ansehen"
    secondaryBtnURL="/de/services"
    withReview={false}
    src={heroImage}
    alt="AquilaFlow Systems Hardware-Engineering und PCB-Design"
  />

  <FeaturesGeneral
    title="Unsere Kernkompetenzen"
    subTitle="Wir sind auf drei Schlüsselbereiche spezialisiert, die Hardware-Unternehmen dabei helfen, effizient vom Prototyp zur Produktion zu gelangen."
    src={featureImage}
    alt="AquilaFlow Systems Dienstleistungen"
    features={features}
  />

  <FAQ title="Häufig gestellte<br />Fragen" faqs={faqs} />

  <HeroSectionAlt
    title="Lassen Sie uns gemeinsam bauen"
    subTitle="Bereit, Ihr Hardware-Projekt zu beschleunigen? Kontaktieren Sie uns für eine kostenlose Bewertung."
    url="/de/contact"
    locale="de"
  />
</MainLayout>

