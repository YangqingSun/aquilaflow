---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/service-schematic.jpg";
import personWorking from "@images/service-meeting.jpg";
import beforeAfter from "@images/service-testing.jpg";
import constructionWorkers from "@images/service-engineer.jpg";
import aerialView from "@images/service-soldering.jpg";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Diseño de PCB y DFM",
    subTitle:
      "Nuestros servicios de diseño de PCB cubren el ciclo completo de diseño desde la captura de esquemas hasta la optimización de layout. Nos especializamos en Diseño para Fabricabilidad (DFM) para asegurar que sus placas estén listas para producción. Nuestro equipo trabaja con usted para optimizar la colocación de componentes, el enrutamiento y la estructura de capas tanto para rendimiento como para rentabilidad. Proporcionamos revisiones detalladas de diseño y análisis de fabricabilidad para detectar problemas potenciales antes de que lleguen a la línea de producción.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Planos y esquemas de diseño de PCB",
    imgTwo: personWorking,
    imgTwoAlt: "Ingeniero trabajando en diseño de PCB",
  },
  {
    isRightSection: false,
    title: "Sistemas de Pruebas Automatizadas",
    subTitle:
      "Desarrollamos equipos de prueba automatizados basados en Python que se integran perfectamente en su línea de producción. Nuestros sistemas de prueba están diseñados para confiabilidad, repetibilidad y escalabilidad. Desde pruebas funcionales hasta validación de condiciones límite, creamos suites de prueba completas que aseguran la calidad del producto en cada etapa de fabricación. Nuestras soluciones soportan entornos de producción de alto volumen y pueden adaptarse fácilmente a medida que su producto evoluciona.",
    img: beforeAfter,
    imgAlt: "Sistema de prueba automatizado en entorno de producción",
    btnExists: true,
    btnTitle: "Obtener Cotización",
    btnURL: "/es/contact",
  },
  {
    isRightSection: true,
    title: "Depuración de Hardware",
    subTitle:
      "Cuando surgen problemas de hardware, nuestros servicios de depuración proporcionan análisis rápido de causa raíz. Nos especializamos en integridad de potencia, integridad de señal y solución de problemas EMI/EMC. Usando equipos de medición avanzados y técnicas de análisis, identificamos y resolvemos problemas que pueden afectar el rendimiento, la confiabilidad y el cumplimiento normativo. Nuestro proceso de depuración incluye documentación detallada y recomendaciones para prevenir problemas similares en diseños futuros.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Depuración y análisis de hardware",
    imgTwo: aerialView,
    imgTwoAlt: "Análisis y pruebas de circuitos",
  },
];

const pageTitle: string = `Servicios | ${SITE.title}`;
const metaDescription =
  "AquilaFlow Systems proporciona servicios integrales de ingeniería de hardware, incluyendo diseño de PCB, sistemas de prueba automatizados y depuración de hardware para acelerar su producto desde prototipo hasta producción.";
const ogTitle = "Servicios de Ingeniería de Hardware | AquilaFlow Systems";
---

<MainLayout
  lang="es"
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://aquilaflow.com/es/services",
    url: "https://aquilaflow.com/es/services",
    name: "Servicios de Ingeniería de Hardware | AquilaFlow Systems",
    description:
      "AquilaFlow Systems proporciona servicios integrales de ingeniería de hardware, incluyendo diseño de PCB, sistemas de prueba automatizados y depuración de hardware para acelerar su producto desde prototipo hasta producción.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://aquilaflow.com",
      name: "AquilaFlow Systems",
      description:
        "Empresa de ingeniería de hardware con sede en EE.UU. especializada en diseño de PCB y sistemas de prueba automatizados con Python.",
    },
    inLanguage: "es",
  }}
>
  <MainSection
    title="Servicios de Ingeniería de Hardware"
    subTitle="Desde el diseño inicial de PCB hasta pruebas automatizadas y depuración, AquilaFlow Systems proporciona servicios integrales de ingeniería de hardware de extremo a extremo. Ayudamos a las empresas de hardware a conectar el puente entre prototipo y producción masiva con servicios de diseño profesionales, automatización de pruebas basada en Python y capacidades de depuración expertas."
    btnExists={true}
    btnTitle="Obtener Evaluación del Proyecto"
    btnURL="/es/contact"
  />
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="Por los Números"
    subTitle="Nuestro compromiso con la calidad y confiabilidad es evidente en cada proyecto que emprendemos. En AquilaFlow Systems, nos dedicamos a proporcionar servicios de ingeniería de hardware líderes en la industria que aseguran que sus productos estén listos para producción."
    mainStatTitle="98%"
    mainStatSubTitle="de nuestros diseños de PCB pasan la validación de fabricación en el primer intento"
    stats={[
      {
        stat: "500+",
        description: "diseños de PCB entregados",
      },
      {
        stat: "50+",
        description: "sistemas de prueba automatizados desplegados",
      },
      {
        stat: "95%",
        description: "problemas de depuración resueltos en 48 horas",
      },
    ]}
  />
</MainLayout>

