---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contacto | ${SITE.title}`;
const metaDescription =
  "¿Tiene preguntas sobre diseño de PCB, pruebas automatizadas o depuración de hardware? Contacte a AquilaFlow Systems para una evaluación gratuita del proyecto y consulta.";
const ogTitle = "Contáctenos | AquilaFlow Systems";
---

<MainLayout
  lang="es"
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://aquilaflow.com/es/contact",
    url: "https://aquilaflow.com/es/contact",
    name: "Contáctenos | AquilaFlow Systems",
    description:
      "¿Tiene preguntas sobre diseño de PCB, pruebas automatizadas o depuración de hardware? Contacte a AquilaFlow Systems para una evaluación gratuita del proyecto y consulta.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://aquilaflow.com",
      name: "AquilaFlow Systems",
      description:
        "Empresa de ingeniería de hardware con sede en EE.UU. especializada en diseño de PCB y sistemas de prueba automatizados con Python.",
    },
    inLanguage: "es",
  }}
>
  <ContactSection />
</MainLayout>

