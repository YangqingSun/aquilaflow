---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/service-schematic.jpg";
import personWorking from "@images/service-meeting.jpg";
import beforeAfter from "@images/service-testing.jpg";
import constructionWorkers from "@images/service-engineer.jpg";
import aerialView from "@images/service-soldering.jpg";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "PCB 설계 및 DFM",
    subTitle:
      "저희 PCB 설계 서비스는 회로도 작성부터 레이아웃 최적화까지의 완전한 설계 주기를 다룹니다. 제조 가능성 설계(DFM)에 특화하여 고객의 기판이 생산 준비가 되도록 합니다. 저희 팀은 성능과 비용 효율성 모두를 위해 컴포넌트 배치, 배선 및 레이어 스택업을 최적화하기 위해 협력합니다. 생산 라인에 도달하기 전에 잠재적인 문제를 발견하기 위한 상세한 설계 검토 및 제조 가능성 분석을 제공합니다.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "PCB 설계 청사진 및 회로도",
    imgTwo: personWorking,
    imgTwoAlt: "PCB 설계에 작업하는 엔지니어",
  },
  {
    isRightSection: false,
    title: "자동화 테스트 시스템",
    subTitle:
      "저희는 생산 라인에 원활하게 통합되는 Python 기반 자동화 테스트 장비를 개발합니다. 저희 테스트 시스템은 신뢰성, 반복성 및 확장성을 위해 설계되었습니다. 기능 테스트부터 경계 조건 검증까지, 제조의 모든 단계에서 제품 품질을 보장하는 포괄적인 테스트 스위트를 만듭니다. 저희 솔루션은 대량 생산 환경을 지원하며 제품이 발전함에 따라 쉽게 적응할 수 있습니다.",
    img: beforeAfter,
    imgAlt: "생산 환경의 자동화 테스트 시스템",
    btnExists: true,
    btnTitle: "견적 받기",
    btnURL: "/ko/contact",
  },
  {
    isRightSection: true,
    title: "하드웨어 디버깅",
    subTitle:
      "하드웨어 문제가 발생하면, 저희 디버깅 서비스는 빠른 근본 원인 분석을 제공합니다. 전원 무결성, 신호 무결성 및 EMI/EMC 문제 해결에 특화되어 있습니다. 고급 측정 장비 및 분석 기술을 사용하여 성능, 신뢰성 및 규정 준수에 영향을 줄 수 있는 문제를 식별하고 해결합니다. 저희 디버깅 프로세스에는 향후 설계에서 유사한 문제를 방지하기 위한 상세한 문서화 및 권장 사항이 포함됩니다.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "하드웨어 디버깅 및 분석",
    imgTwo: aerialView,
    imgTwoAlt: "회로 분석 및 테스트",
  },
];

const pageTitle: string = `서비스 | ${SITE.title}`;
const metaDescription =
  "AquilaFlow Systems는 PCB 설계, 자동화 테스트 시스템 및 하드웨어 디버깅을 포함한 포괄적인 하드웨어 엔지니어링 서비스를 제공하여 제품을 프로토타입에서 생산으로 가속화합니다.";
const ogTitle = "하드웨어 엔지니어링 서비스 | AquilaFlow Systems";
---

<MainLayout
  lang="ko"
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://aquilaflow.com/ko/services",
    url: "https://aquilaflow.com/ko/services",
    name: "하드웨어 엔지니어링 서비스 | AquilaFlow Systems",
    description:
      "AquilaFlow Systems는 PCB 설계, 자동화 테스트 시스템 및 하드웨어 디버깅을 포함한 포괄적인 하드웨어 엔지니어링 서비스를 제공하여 제품을 프로토타입에서 생산으로 가속화합니다.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://aquilaflow.com",
      name: "AquilaFlow Systems",
      description:
        "PCB 설계 및 Python 자동화 테스트 시스템에 특화된 미국 기반 하드웨어 엔지니어링 회사.",
    },
    inLanguage: "ko",
  }}
>
  <MainSection
    title="하드웨어 엔지니어링 서비스"
    subTitle="초기 PCB 설계부터 자동화 테스트 및 디버깅까지, AquilaFlow Systems는 엔드투엔드 하드웨어 엔지니어링 서비스를 제공합니다. 전문적인 설계 서비스, Python 기반 테스트 자동화 및 전문적인 디버깅 기능으로 하드웨어 기업이 프로토타입과 대량 생산 사이의 격차를 연결하는 데 도움을 줍니다."
    btnExists={true}
    btnTitle="프로젝트 평가 받기"
    btnURL="/ko/contact"
  />
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="수치로 보기"
    subTitle="품질과 신뢰성에 대한 저희의 약속은 저희가 수행하는 모든 프로젝트에서 명확합니다. AquilaFlow Systems에서는 고객의 제품이 생산 준비가 되도록 하는 업계를 선도하는 하드웨어 엔지니어링 서비스를 제공하는 데 전념하고 있습니다."
    mainStatTitle="98%"
    mainStatSubTitle="의 PCB 설계가 첫 시도에서 제조 검증을 통과"
    stats={[
      {
        stat: "500+",
        description: "납품된 PCB 설계",
      },
      {
        stat: "50+",
        description: "배포된 자동화 테스트 시스템",
      },
      {
        stat: "95%",
        description: "디버깅 문제가 48시간 이내에 해결",
      },
    ]}
  />
</MainLayout>

